{
  "extends": "./tsconfig.json",
  "include": [
    "next-env.d.ts",
    "types/**/*.d.ts",
    "app/**/*.{ts,tsx}",
    "components/**/*.{ts,tsx}",
    "lib/**/*.{ts,tsx}",
    "providers/**/*.{ts,tsx}",
    "schemas/**/*.{ts,tsx}",
    "stores/**/*.{ts,tsx}",
    "tailwind/**/*.{ts,tsx}",
    ".next/types/**/*.ts",
    "next.config.js",
    "prettier.config.cjs",
    "postbuild.js"
  ],
  "exclude": [
    "node_modules",
    "client/**/*.gen.ts",
    "client/**/*.gen.tsx",
    "**/*.gen.ts",
    "**/*.gen.tsx"
  ]
}
